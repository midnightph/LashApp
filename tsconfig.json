{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native", // ✅ necessário para usar JSX
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "src/navigation/TabNavigator.jsx",
    "app/index.tsx",
    "src/screens/HomeScreen.jsx"
  ]
}
